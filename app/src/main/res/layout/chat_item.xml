<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/customBgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/customBgColor"
        android:orientation="horizontal"
        android:paddingStart="30sp"
        android:paddingTop="10sp"
        android:paddingEnd="30sp"
        android:paddingBottom="10sp">

        <androidx.cardview.widget.CardView
            android:id="@+id/chatItemCardView"
            android:layout_width="54dp"
            android:layout_height="54dp"

            android:background="?attr/customBgColor"
            app:cardCornerRadius="250dp">


            <ImageView
                android:id="@+id/chatItemprofileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_filmtracker_foreground" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/chatItemUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10sp"
            android:text="Manolo antoÃ±ete perez"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:layout_marginBottom="10sp"
        android:background="?attr/colorOnSecondary" />


</androidx.appcompat.widget.LinearLayoutCompat>