<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foregroundTint="#FFFFFF">

    <LinearLayout
        android:id="@+id/chatItemFriendLinearLayoutNamed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/shape_chat_friend_named"
        android:orientation="vertical"
        android:paddingHorizontal="15sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/chatItemFriendMessageNamedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Merlin Daniel"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/ChatItemFriendMessageNamedDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_700"/>

        <TextView
            android:id="@+id/chatItemFriendMessageNamedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10sp"
            android:layout_marginTop="5sp"
            android:text="Friend message"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


    <TextView
        android:id="@+id/chatItemFriendNamedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:text="Martes, 23:40"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatItemFriendLinearLayoutNamed" />


</androidx.constraintlayout.widget.ConstraintLayout>